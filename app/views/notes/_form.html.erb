<div class="row">

  <%= form_for note do |form| %>
    <div class="form-group">
      <% if @errors and @errors.any? %>
        <ul>
          <% @errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, :class => "form-control", :maxlength => "50" %>
    </div>
      
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= form.hidden_field :user_id, :class => "form-control", :value=>current_user.id %>
    </div>

    <div class="form-group">
      <%= form.label :tags %>
      <%if note.tags and note.tags.size > 0%>
        <%= form.text_field :tag_ids, 'data-role'=>'tagsinput', disabled: true, value: note.tags.pluck(:name).join(",")%>
      <%else%>
        <%= form.text_field :tag_ids, 'data-role'=>'tagsinput'%>
      <%end%>
      
      
    </div>
    
    
    <div class="actions">
      <%= form.submit "Save", :class => "btn btn-primary" %>  
    </div>  
  
  <% end %>
  
</div>
